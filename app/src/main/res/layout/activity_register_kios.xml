<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterKios">
    //buat register akun kios
    <androidx.cardview.widget.CardView
        android:id="@+id/cdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/rlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Nama Pemilik"
                android:inputType="textPersonName"
                android:id="@+id/etNama"
                android:layout_margin="4dp"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Nama Kios"
                android:inputType="text"
                android:id="@+id/etKios"
                android:layout_below="@id/etNama"
                android:layout_margin="4dp"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Email"
                android:inputType="textEmailAddress"
                android:id="@+id/etEmail"
                android:layout_margin="4dp"
                android:layout_below="@id/etKios"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan Password"
                android:inputType="textPassword"
                android:id="@+id/etPassword"
                android:layout_margin="4dp"
                android:layout_below="@id/etEmail"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan No Telp"
                android:inputType="number"
                android:id="@+id/etTelp"
                android:layout_below="@id/etPassword"
                android:layout_margin="4dp"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:id="@+id/etAlamat"
                android:layout_below="@id/etTelp"
                android:layout_margin="4dp"
                android:inputType="text"
                android:ems="10" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnRegisterKios"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/login"
        android:elevation="15dp"
        android:fontFamily="@font/gilroybbold"
        android:text="Daftar Kios"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvPertanyaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegisterKios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gilroymedium"
        android:text="sudah memilii akun?"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPertanyaan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gilroyllight"
        android:text="Masuk"
        android:textColor="#1933F1"
        android:textSize="14sp"
        android:textStyle="normal" />

</RelativeLayout>