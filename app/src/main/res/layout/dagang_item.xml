<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp">
    //buat isi card view menu utama
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:elevation="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/imgNew"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cdView"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Nama Barang"
            android:textSize="16sp"
            android:fontFamily="@font/gilroybbold"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBarang"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/gilroymedium"
            android:text="Harga"
            android:textColor="#E91E63"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tvHarga"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:text="Nama Kios"
            android:textSize="14sp"
            android:fontFamily="@font/gilroymedium"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>